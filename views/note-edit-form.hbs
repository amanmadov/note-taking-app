<main class="container" data-bs-theme="dark">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <form method="post">
                <div class="form-floating mb-3">
                    <input type="text" class="form-control fw-semibold" id="title" name="title" required value="{{note.title}}">
                    <label for="title" class="custom-label">Note Title</label>
                </div>
                <div class="form-floating mb-3">
                    <select class="form-select fw-semibold" aria-label="status" id="status" name="status">
                        <option value="public" {{#ifeq note.status "public"}} selected {{/ifeq}}>Public</option>
                        <option value="private" {{#ifeq note.status "private"}} selected {{/ifeq}}>Private</option>
                    </select>
                    <label for="status" class="custom-label">Status</label>
                </div>
                <div class="form-floating pb-5">
                    <textarea class="form-control fw-semibold" required id="body" name="body"
                        style="height: 200px">{{note.body}}</textarea>
                    <label for="body" class="custom-label">Note Body</label>
                </div>
                <input type="hidden" value="{{note._id}}" name="id" id="id">
                <button class="w-100 btn btn-primary text-center fw-bold" type="submit">Save</button>
            </form>
        </div>
    </div>

</main>