<main class="container">
    <div class="container px-4 py-5" id="hanging-icons">
        <div class="row p-4">
            <div class="col-lg-12 text-center">
                <img src="{{user.imageUrl}}" width="120" height="120" class="rounded-circle"
                    alt="profile image of {{user.displayName}}">
                <h2 class="pb-3 border-bottom">Notes by {{user.displayName}}</h2>
            </div>
        </div>
        <table class="table table-dark table-striped">
            <thead>
                <tr>
                    <th scope="col">#</th>
                    <th scope="col">Title</th>
                    <th scope="col">Body</th>
                    <th scope="col">Created Date</th>
                    <th scope="col">Action</th>
                </tr>
            </thead>
            <tbody>
                {{#each userNotes}}
                <tr>
                    <th scope="row">{{inc @index}}</th>
                    <td>{{substr "30" title}}</td>
                    <td>{{substr "60" body}}</td>
                    <td>{{createdAt}}</td>
                    <td>
                        <a class="btn btn-primary" href="/note/{{_id}}">Read</a>
                        {{#if ../isSameUser}}<a class="btn btn-warning" href="/note/edit/{{_id}}">Edit</a>{{/if}}
                    </td>
                </tr>
                {{/each}}
            </tbody>
        </table>
    </div>
</main>